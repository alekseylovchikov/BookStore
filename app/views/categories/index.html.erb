<h4>Categories</h4>

<table class="table table-striped">
	<tr>
		<th>Category Name</th>
		<th>Actions</th>
	</tr>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Edit', edit_category_path(category.id), class: 'btn btn-primary' %> <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
		</tr>
	<% end %>
</table>